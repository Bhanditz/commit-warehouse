#!/bin/bash

## parse environment variables
. versions.sh

## run the docker build using parsed variables
echo_and_run docker build \
    -t $DOCKER_REPO:$CONVERTIGO_MODE-$CONVERTIGO_VERSION \
    -f $DOCKER_FILE \
    $FORCE_TOMCAT_ARGS \
    --build-arg CONVERTIGO_VERSION=$CONVERTIGO_VERSION \
    --build-arg CONVERTIGO_REVISION=$CONVERTIGO_REVISION \
    .
